{
  "name": "irm",
  "version": "1.0.0",
  "author": "Summer498 <subore02@gmail.com>",
  "license": "MIT",
  "description": "Implication-Realization Model Library",
  "keywords": [
    "music",
    "theory"
  ],
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/index.js",
  "module": "packages/index.mjs",
  "types": "packages/index.d.ts",
  "scripts": {
    "test:ci": "yarn format && yarn lint && yarn build && yarn test -- --no-cache",
    "format": "prettier --write packages/**/*.ts packages/**/package.json",
    "lint": "tslint --fix --project tsconfig.json -t codeFrame 'packages/**/*.ts'",
    "build": "turbo run build",
    "test": "jest --coverage",
    "trial": "tsc && node ./index.js"
  },
  "dependencies": {
    "tonal": "link:../tonal"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.2",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tsup": "^8.0.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "prettier --write",
      "tslint -p tsconfig.json"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      ".*\\.d\\.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ]
  },
  "repository": "https://github.com/Summer498/irm.git",
  "private": true
}

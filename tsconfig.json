{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "**/dist/**/*"]
}

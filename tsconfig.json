{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["packages/**/*.ts", "../../packages/**/*"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
